FROM node:18-alpine

# Install dependencies
RUN apk add --no-cache ffmpeg python3 make g++ yt-dlp

WORKDIR /app

# Copy package files
COPY package*.json ./

# Install dependencies
RUN npm install

# Copy source code
COPY . .

# Create necessary directories
RUN mkdir -p uploads/temp uploads/processed

# Set environment variables
ENV NODE_ENV=development
ENV PORT=4000

# Expose port
EXPOSE 4000

# Start the application in development mode
CMD ["npm", "run", "dev"] 